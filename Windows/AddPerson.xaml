<Window x:Class="TRPO_3.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPO_3"
        mc:Ignorable="d"
        Title="AddWindow" Height="294" Width="390">
    <Grid Margin="0,0,0,2">
        <TextBox x:Name="NameInput" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="186" Height="21"/>
        <TextBox x:Name="SurnameInput" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="186" Height="21"/>
        <TextBox x:Name="PatronymicInput" HorizontalAlignment="Left" Margin="9,80,0,0" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top" Width="186" Height="21"/>
        <Button x:Name="ConfirmButton" Content="Добавить" HorizontalAlignment="Right" Margin="0,0,10,11" VerticalAlignment="Bottom" Height="30" Width="100" Click="ConfirmButton_Click"/>
        <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="9,0,0,11" VerticalAlignment="Bottom" Height="30" Width="100" Click="CancelButton_Click"/>
    </Grid>
</Window>
